<h2>無料出店登録フォーム</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="form">

  <div class="form_group">
    <%= f.label :company_name, "会社名" %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
  </div>

  <div class="form_group">
    <%= f.label :name, "お名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form_group">
    <%= f.label :name_kana, "フリガナ" %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
  </div>

  <div class="form_group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form_group">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form_group">
    <%= f.label :password_confirmation, "パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
  </div>

<div class="login-action">
  <p>出店登録がお済みの方は<%= link_to "こちら", new_admin_session_path %></p>
</div>
