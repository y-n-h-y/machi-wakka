<%= search_form_for @search, url: search_shops_path do |f| %>
<%= f.select :state_eq, options_for_select(Shop.states_i18n) %>
<%= f.submit "検索" %>
<% end %>
<main>
  <div class="shop-list">
    <ul>
      <% @shops.each do |shop| %>
      <li>
        <%= link_to shop_path(shop) do %>
        <div class="shop-list_detail">
          <div class="shop-list_image">
            <% if shop.logo.blank? %>
            <%= image_tag('no-image.png') %>
            <% else %>
            <%= attachment_image_tag shop, :logo %>
            <% end %>
          </div>
          <div class="shop-list_content">
            <h2><%= shop.name %></h2>
            <dl>
              <dt>住所</dt>
              <dd><%= shop.full_address %></dd>
            </dl>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</main>

