<main>
  <div class="head">
    <h1 class="head_mypage">会員マイページ</h1>
  </div>
  <div class="mypage-content">
    <div class="mypage-icon">
      <div class="mypage-icon_image"><i class="fas fa-user"></i></div>
      <p><%= current_customer.nickname %></p>
    </div>
    <ul>
      <% if Favorite.exists?(@customer) %>
      <li>
        <%= link_to like_customers_path do %>
        <div class="mypage-content_list">
          <%= image_tag('shop-create') %>
          <h2>お気に入り店舗一覧</h2>
        </div>
        <% end %>
      </li>
      <% else %>
      <li>
        <div class="mypage-content_list">
          <%= image_tag('shop-create') %>
          <h2>お気に入り店舗一覧</h2>
        </div>
      </li>
      <% end %>
      <% if current_customer.reviews.blank? %>
      <li>
        <div class="mypage-content_list">
          <%= image_tag('shop-create') %>
          <h2>レビュー一覧</h2>
        </div>
      </li>
      <% else %>
      <li>
        <%= link_to customer_reviews(current_customer) do %>
        <div class="mypage-content_list">
          <%= image_tag('shop-create') %>
          <h2>レビュー一覧</h2>
        </div>
        <% end %>
      </li>
      <% end %>
      <li>
        <%= link_to edit_customer_path(current_customer) do %>
        <div class="mypage-content_list">
          <%= image_tag('shop-create') %>
          <h2>登録情報編集</h2>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
</main>
