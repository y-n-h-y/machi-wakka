<main>
  <div class="head">
    <h1>ニュース詳細</h1>
  </div>
  <div class="layer">
    <%= link_to admin_shop_news_index_path do %>
    <i class="fas fa-chevron-left">&thinsp;ニュース一覧に戻る</i>
    <% end %>
  </div>
  <div class="news-content">
    <h2><%= @news.title %></h2>
    <div class="tag">
      <p><%= @news.created_at.strftime('%Y年%m月%d日') %></p>
      <p><%= @news.genre_i18n %></p>
    </div>
    <div class="news-content_image">
      <% if @news.image.nil? %>
      <% else %>
      <%= attachment_image_tag @news, :image %>
      <% end %>
    </div>
    <p><%= @news.content %></p>
  </div>
</main>
