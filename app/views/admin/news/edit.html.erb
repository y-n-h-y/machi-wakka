<main>
  <div class="head">
    <h1>ニュース作成フォーム</h1>
  </div>
  <div class="validate">
  <% if @news.errors.any? %>
    <h3><%= @news.errors.count %>件のエラーが発生しました</h3>
    <% @news.errors.full_messages.each do |message| %>
      <p class="validate-text"><%= message %></p>
    <% end %>
  <% end %>
  </div>
  <%= form_with model: @news, url: {controller: 'news', action: 'update' }, local:true do |f| %>
  <div class="form">
    <div class="form_group">
      <%= f.label :genre, "ニュースのジャンル" %>
      <%= f.select :genre, News.genres_i18n.invert, {} %>
    </div>
    <div class="form_group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div class="form_group">
      <%= f.label :image, "画像" %>
      <%= f.attachment_field :image, class: 'logo-form' %>
    </div>
    <div class="form_group">
      <%= f.label :content, "内容説明" %>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit "保存する" %>
    </div>
  </div>
  <% end %>
</main>
