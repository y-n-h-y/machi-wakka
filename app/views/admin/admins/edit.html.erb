<main>
  <div class="head">
    <h1>登録情報編集フォーム</h1>
  </div>
  <div class="layer">
    <%= link_to admin_path do %>
    <i class="fas fa-chevron-left">&thinsp;マイページに戻る</i>
    <% end %>
  </div>
  <%= form_with model: @admin, url: {controller: 'admins', action: 'update' }, local:true do |f| %>
  <div class="form">

  <div class="form_group">
    <%= f.label :company_name, "会社名" %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
  </div>

  <div class="form_group">
    <%= f.label :name, "お名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form_group">
    <%= f.label :name_kana, "フリガナ" %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
  </div>

  <div class="form_group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="form_group">
    <%= f.label :phone, "電話番号" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する" %>
  </div>
  <% end %>
  </div>
</main>

