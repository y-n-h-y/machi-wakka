<main>
  <div class="head">
    <h1>レビュー詳細</h1>
  </div>
  <div class="layer">
    <%= link_to admin_shop_reviews_path do %>
    <i class="fas fa-chevron-left">&thinsp;レビューリストに戻る</i>
    <% end %>
  </div>
  <div class="review-detail">
    <div class="review-detail_box">
      <div class="review-detail_box_head">
        <p><%= @review.customer.nickname %>さん</p>
        <p><%= @review.created_at.strftime('%Y.%m.%d') %></p>
      </div>
      <div class="review-detail_box_content">
        <p><%= @review.title %></p>
        <p><%= @review.content %></p>
      </div>
    </div>
  </div>
</main>
